<configuration debug="false" scan="true">

  <appender name="main" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %-10contextName %logger{5} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="log4jdbc" level="WARN" />
  <logger name="log4jdbc.sqltiming" level="INFO" />
  <logger name="jdbc" level="WARN" />
  <logger name="jdbc.sqltiming" level="INFO" />

  <root level="INFO">
    <appender-ref ref="main" />
  </root>

</configuration>
